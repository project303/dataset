<workflow-app xmlns="uri:oozie:workflow:1.0" name="shell-wf">
 <start to="shell-node"/>

   <action name="shell-node">
     <shell xmlns="uri:oozie:shell-action:1.0">
       <job-tracker>yavam-001.labs247.com:8050</job-tracker>
       <name-node>hdfs://yavam-001.labs247.com:8020</name-node>
       <configuration>
         <property>
           <name>mapred.job.queue.name</name>
           <value>default</value>
         </property>
       </configuration>
       <exec>sample.sh</exec>
       <file>/user/root/sample.sh</file>
     </shell>
     <ok to="end"/>
     <error to="fail"/>
   </action>

   <kill name="fail">
     <message>Shell action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
   </kill>
 <end name="end"/>
</workflow-app>
